<style>
  .legal-page { padding: calc(var(--nav-height) + var(--space-xl)) 0 var(--space-3xl); }
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl);
  }
  .legal-content h1 {
    font-size: var(--fs-h1);
    font-weight: 900;
    margin-bottom: var(--space-xs);
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .legal-date { color: var(--text-muted); font-size: var(--fs-small); margin-bottom: var(--space-xl); }
  .legal-content h2 { font-size: var(--fs-h2); font-weight: 700; margin-top: var(--space-lg); margin-bottom: var(--space-sm); }
  .legal-content p, .legal-content li { color: var(--text-secondary); line-height: 1.8; margin-bottom: var(--space-sm); }
  .legal-content ul { padding-left: var(--space-md); margin-bottom: var(--space-sm); }
  .legal-content li { margin-bottom: var(--space-xs); }
  .legal-content a { color: var(--accent-cyan); }
</style>
