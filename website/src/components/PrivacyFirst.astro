---
const { t } = Astro.props;
const icons = [
  /* On-Device — CPU chip */
  '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="4" width="16" height="16" rx="2"/><rect x="9" y="9" width="6" height="6"/><line x1="9" y1="1" x2="9" y2="4"/><line x1="15" y1="1" x2="15" y2="4"/><line x1="9" y1="20" x2="9" y2="23"/><line x1="15" y1="20" x2="15" y2="23"/><line x1="20" y1="9" x2="23" y2="9"/><line x1="20" y1="14" x2="23" y2="14"/><line x1="1" y1="9" x2="4" y2="9"/><line x1="1" y1="14" x2="4" y2="14"/></svg>',
  /* Real-time — Zap */
  '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>',
  /* Whisper model — Waveform / audio */
  '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 1v22"/><path d="M8 4v16"/><path d="M16 4v16"/><path d="M4 8v8"/><path d="M20 8v8"/></svg>',
  /* Encryption — Lock */
  '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0110 0v4"/><circle cx="12" cy="16" r="1"/></svg>',
];
const colors = ['#8B5CF6', '#06D6A0', '#F97316', '#EC4899'];
---

<section class="section privacy-section" id="privacy">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <span class="badge">{t.privacyFirst.title}</span>
      <h2 class="section-title" style="margin-top: var(--space-md);">{t.privacyFirst.subtitle}</h2>
    </div>

    <div class="privacy-grid">
      {t.privacyFirst.features.map((feat: any, i: number) => (
        <div class="privacy-card glass-card animate-on-scroll" style={`animation-delay: ${i * 0.1}s`}>
          <div class="privacy-icon-wrap" style={`color: ${colors[i]}; background: ${colors[i]}15`}>
            <span set:html={icons[i]} />
          </div>
          <h3 class="privacy-card-title">{feat.title}</h3>
          <p class="privacy-card-desc">{feat.description}</p>
          <div class="privacy-card-glow" style={`background: ${colors[i]}`} aria-hidden="true"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .privacy-section {
    position: relative;
    overflow: hidden;
  }
  .privacy-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }
  .privacy-card {
    padding: var(--space-xl) var(--space-lg);
    position: relative;
    overflow: hidden;
    transition: transform var(--transition-medium), box-shadow var(--transition-medium);
  }
  .privacy-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }
  .privacy-icon-wrap {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-md);
  }
  .privacy-icon-wrap :global(svg) {
    width: 24px;
    height: 24px;
  }
  .privacy-card-title {
    font-size: var(--fs-h3);
    font-weight: 700;
    margin-bottom: var(--space-xs);
  }
  .privacy-card-desc {
    color: var(--text-secondary);
    font-size: var(--fs-small);
    line-height: 1.7;
  }
  .privacy-card-glow {
    position: absolute;
    bottom: -40px;
    right: -40px;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    opacity: 0.04;
    filter: blur(40px);
    pointer-events: none;
    transition: opacity var(--transition-medium);
  }
  .privacy-card:hover .privacy-card-glow {
    opacity: 0.1;
  }

  @media (min-width: 640px) {
    .privacy-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .privacy-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
