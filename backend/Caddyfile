	# Global options
	email cris@meetmind.ai
}

# MeetMind Backend â€” auto-HTTPS + WebSocket proxy
# Domain will be replaced via sed in deploy script
meetmind.example.com {
	# Reverse proxy to FastAPI backend
	reverse_proxy backend:8000 {
		# WebSocket support (automatic in Caddy, but explicit for clarity)
		header_up X-Forwarded-Proto {scheme}
		header_up X-Real-IP {remote_host}

		# Health checks
		health_uri /health
		health_interval 30s
		health_timeout 10s
	}

	# Security headers
	header {
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		Referrer-Policy strict-origin-when-cross-origin
		-Server
	}

	# Access logging
	log {
		output stdout
		format json
	}
}
