# MeetMind Backend Environment Variables
# Copy this to .env and fill in values

MEETMIND_ENVIRONMENT=dev
MEETMIND_DEBUG=true

# AWS (Bedrock)
MEETMIND_AWS_PROFILE=mibaggy-co
MEETMIND_AWS_REGION=us-east-1

# Deepgram (cloud STT fallback — optional)
MEETMIND_DEEPGRAM_API_KEY=

# Server
MEETMIND_HOST=0.0.0.0
MEETMIND_PORT=8000

# Logging
MEETMIND_LOG_LEVEL=INFO

# Speaker Diarization (pyannote — get token at huggingface.co/settings/tokens)
MEETMIND_ENABLE_DIARIZATION=true
MEETMIND_HUGGINGFACE_TOKEN=
