# MeetMind Backend Environment Variables
# Copy this to .env and fill in values

MEETMIND_ENVIRONMENT=dev
MEETMIND_DEBUG=true

# AWS (only needed if using Bedrock provider)
MEETMIND_AWS_PROFILE=mibaggy-co
MEETMIND_AWS_REGION=us-east-1

# LLM Provider: "openai" or "bedrock"
MEETMIND_LLM_PROVIDER=openai

# OpenAI (required when LLM_PROVIDER=openai)
MEETMIND_OPENAI_API_KEY=
MEETMIND_OPENAI_SCREENING_MODEL=gpt-4.1-nano
MEETMIND_OPENAI_ANALYSIS_MODEL=gpt-5.2
MEETMIND_OPENAI_COPILOT_MODEL=gpt-5.2
MEETMIND_OPENAI_DEEP_MODEL=gpt-5.2-pro

# STT Engine: "whisper" (fast CPU) | "qwen" (GPU/Docker) | "parakeet" (NVIDIA)
MEETMIND_STT_ENGINE=whisper
MEETMIND_WHISPER_MODEL=small
MEETMIND_WHISPER_LANGUAGE=es
MEETMIND_QWEN_ASR_MODEL=Qwen/Qwen3-ASR-0.6B
MEETMIND_PARAKEET_MODEL=nvidia/parakeet-tdt-0.6b-v3

# Deepgram (cloud STT fallback — optional)
MEETMIND_DEEPGRAM_API_KEY=

# Server
MEETMIND_HOST=0.0.0.0
MEETMIND_PORT=8000

# Logging
MEETMIND_LOG_LEVEL=INFO

# Speaker Diarization (pyannote — get token at huggingface.co/settings/tokens)
MEETMIND_ENABLE_DIARIZATION=false
MEETMIND_HUGGINGFACE_TOKEN=
